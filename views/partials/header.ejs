<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <style>
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Redacted+Script:wght@300;400;700&display=swap');
    </style>

  <link rel="stylesheet" href="/styles/main.css">



  <title>Brain blog</title>
</head>

<header>
  <div class="buttCon">
    <button id="grey" class="grey">1</button>
    <button id="pink" class="pink">2</button>
    <button id="green" class="green">3</button> 
  </div>

</header>

<script>

const greyBtn = document.querySelector('#grey');
const pinkBtn = document.querySelector('#pink');
const greenBtn = document.querySelector('#green');

greyBtn.addEventListener('click', () => {
  document.body.style.backgroundColor = "#C2C2C2";
  let elements = document.getElementsByClassName('changeC');
  for (let i = 0; i < elements.length; i++) {
    elements[i].style.color = "#0D0C0C";
  }
document.getElementById("reviewBox").style.backgroundColor = "#D9D9D9";

let inputs = document.querySelectorAll('input');
  inputs.forEach(input => {
    input.style.backgroundColor = "#D9D9D9";
  });

  let textareas = document.querySelectorAll('textarea');
  textareas.forEach(textarea => {
    textarea.style.backgroundColor = "#D9D9D9";
  });

});

pinkBtn.addEventListener('click', () => {
  document.body.style.backgroundColor = "#FFC6F9";
  let elements = document.getElementsByClassName('changeC');
  for (let i = 0; i < elements.length; i++) {
    elements[i].style.color = "#F74676";
  }
  document.getElementById("reviewBox").style.backgroundColor = "#FFD8FF";

  let inputs = document.querySelectorAll('input');
  inputs.forEach(input => {
    input.style.backgroundColor = "#FFD8FF";
  });

  let textareas = document.querySelectorAll('textarea');
  textareas.forEach(textarea => {
    textarea.style.backgroundColor = "#FFD8FF";
  });
});

greenBtn.addEventListener('click', () => {
  document.body.style.backgroundColor = "#91FF68";
  let elements = document.getElementsByClassName('changeC');
  for (let i = 0; i < elements.length; i++) {
    elements[i].style.color = "#1F903D";
  }
  document.getElementById("reviewBox").style.backgroundColor = "#D2FFB8";

  let inputs = document.querySelectorAll('input');
  inputs.forEach(input => {
    input.style.backgroundColor = "#D2FFB8";
  });

  let textareas = document.querySelectorAll('textarea');
  textareas.forEach(textarea => {
    textarea.style.backgroundColor = "#D2FFB8";
  });
});
</script>
